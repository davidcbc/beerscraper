<html>

<head>
  <title>Beer Scraper</title>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
  <script src="/javascripts/angularApp.js"></script>
</head>

<body ng-app="beerScraper" ng-controller="MainCtrl">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ui-view></ui-view>
    </div>
  </div>


  <script type="text/ng-template" id="/home.html">
  <div class="page-header">
    <h1>Beer Scraper</h1>
  </div>

  <div ng-repeat="bar in bars | orderBy:'-upvotes'">
    <span style="font-size:20px; margin-left:10px;">
        {{bar.name}}
      <span>
        <a href="#/bars/{{ bar._id }}">Beers</a>
      </span>
    </span>
  </div>

  <form ng-submit="addBar()" style="margin-top:30px;">
    <h3>Add a new bar</h3>

    <div class="form-group">
      <input type="text" class="form-control" placeholder="Title" ng-model="title"></input>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" placeholder="Link" ng-model="link"></input>
    </div>
    <button type="submit" class="btn btn-primary">Post</button>
  </form>
  </script>


  
  <script type="text/ng-template" id="/bar.html">
  <div class="page-header">
    <h3>
        {{bar.name}}
    </h3>
    <div ng-repeat="category in bar.categories">
      <span style="font-size:20px; margin-left:10px;">
        {{category.name}}
      </span>
    </div>
  </div>
  </script>
</body>

</html>